{
  "parser": "typescript",
  "printWidth": 120,
  "semi": true,
  "tabWidth": 2,
  "arrowParens": "always",
  "singleQuote": false,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "**/*.scss",
      "options": {
        "parser": "scss",
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
